    <% posts.forEach(function(post){ %>
        <h1>
            <%= post.postTitle %>
        </h1>
        <p>
            <%= post.postPostSection.substring(0, 100 + " ..." ) %>
                <a href="/post/<&=post.postTitle %>">Read more</a>
        </p>
        <% }) %>




